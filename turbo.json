{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["DATABASE_URL", "DATABASE_DIRECT_URL", "NEXT_PUBLIC_APP_URL"]
    },
    "dev": {
      "dependsOn": ["db:generate"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "db:generate"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["db:generate"],
      "outputs": []
    },
    "test:integration": {
      "dependsOn": ["db:generate"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["db:generate"],
      "outputs": []
    },
    "test:e2e:smoke": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:e2e:full": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:e2e:full:all": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:visual": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/.prisma/**"],
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
