{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://inductlite.local/schemas/critical-paths.schema.json",
  "title": "Critical Paths Schema",
  "type": "object",
  "required": ["version", "updated_at_utc", "owner", "allowed_paths", "denied_paths"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "updated_at_utc": { "type": "string", "format": "date-time" },
    "owner": { "type": "string", "minLength": 1 },
    "allowed_paths": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "denied_paths": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "additionalProperties": false
}
