{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://inductlite.local/schemas/tenant-owned-models.schema.json",
  "title": "Tenant Owned Models Schema",
  "type": "object",
  "required": ["version", "updated_at_utc", "source_schema", "tenant_owned_models"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "updated_at_utc": { "type": "string", "format": "date-time" },
    "source_schema": { "type": "string", "minLength": 1 },
    "tenant_owned_models": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "parent_scoped_models": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "additionalProperties": false
}
